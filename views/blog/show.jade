.container
    section.blog-content
        header.blog-content-header.pure-g
            div.pure-u-1-2
                h1.blog-content-title {{ post.title }}
                p.blog-content-subtitle
                    | By 
                    a.blog-author {{ post.user.username }} 
                    | at 
                    span {{ post.createdTime }}
            div.blog-content-controls.pure-u-1-2
                button.secondary-button.pure-button Reply
                button.secondary-button.pure-button Forward
                button.secondary-button.pure-button Vote
        section.blog-content-body
            div.blog
                p.blog-summary {{ post.summary }}
                div(mark-down, ng-bind-html='previewContent')
    nav.slideshow
        a.nav-close(ng-href='/#/blog')
            span.icon-cancel
        a.nav-edit(ng-href='/#/blog/edit/{{post._id}}')
            span.icon-edit