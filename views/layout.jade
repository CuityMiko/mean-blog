doctype html
html(lang='zh-CN')
    head
        meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='keywords',content='#{keywords ? keywords : "blog,mean"}')
        meta(name='description',content='#{description ? description : "blog"}')
        link(href='/stylesheets/app.css', rel='stylesheet')
        block title
        block stylesheets
    body
        block content